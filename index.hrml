<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nexus Hub | Pro Downloader</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <style>
        :root {
            --bg: #030712;
            --sidebar: #0f172a;
            --accent: #8b5cf6;
            --glass: rgba(255, 255, 255, 0.03);
            --border: rgba(255, 255, 255, 0.1);
            --text: #f3f4f6;
            --text-dim: #94a3b8;
        }

        body {
            margin: 0;
            font-family: 'Inter', 'Segoe UI', sans-serif;
            background: var(--bg);
            color: var(--text);
            display: flex;
            height: 100vh;
            overflow: hidden;
        }

        /* Sidebar - Styled like your Screenshot */
        nav {
            width: 260px;
            background: var(--sidebar);
            border-right: 1px solid var(--border);
            display: flex;
            flex-direction: column;
            padding: 25px 15px;
            gap: 10px;
        }

        .logo {
            font-size: 1.6rem;
            font-weight: 800;
            background: linear-gradient(to right, #8b5cf6, #3b82f6);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 40px;
            padding-left: 10px;
        }

        .nav-link {
            padding: 12px 15px;
            border-radius: 12px;
            text-decoration: none;
            color: var(--text-dim);
            display: flex;
            align-items: center;
            gap: 15px;
            transition: 0.3s;
        }

        .nav-link.active {
            background: var(--glass);
            color: white;
            border: 1px solid var(--border);
        }

        /* Content Area */
        main {
            flex: 1;
            overflow-y: auto;
            padding: 40px;
            background: radial-gradient(circle at top right, #1e1b4b, transparent);
        }

        .hero { text-align: center; margin-bottom: 40px; }
        .hero h1 { font-size: 2.5rem; margin-bottom: 10px; }

        .control-panel {
            background: var(--glass);
            backdrop-filter: blur(20px);
            border: 1px solid var(--border);
            border-radius: 24px;
            padding: 30px;
            max-width: 800px;
            margin: 0 auto;
        }

        .input-row {
            display: flex;
            gap: 12px;
            margin-bottom: 20px;
        }

        input {
            flex: 1;
            background: rgba(0,0,0,0.5);
            border: 1px solid var(--border);
            padding: 15px;
            border-radius: 14px;
            color: white;
            font-size: 1rem;
            outline: none;
            transition: 0.3s;
        }

        input:focus { border-color: var(--accent); }

        .btn {
            padding: 12px 25px;
            border-radius: 12px;
            border: none;
            font-weight: 700;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 10px;
            transition: 0.2s;
        }

        .btn-main { background: var(--accent); color: white; }
        .btn-alt { background: #1e293b; color: white; border: 1px solid var(--border); }
        .btn:hover { transform: translateY(-2px); filter: brightness(1.2); }

        /* Video Section */
        #player-container {
            display: none;
            margin: 40px auto;
            max-width: 800px;
            border-radius: 20px;
            overflow: hidden;
            border: 1px solid var(--border);
            background: #000;
        }

        .iframe-wrapper { position: relative; padding-bottom: 56.25%; height: 0; }
        .iframe-wrapper iframe { position: absolute; top:0; left:0; width:100%; height:100%; }

        .error-fix-bar {
            background: #1e293b;
            padding: 10px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 0.9rem;
        }

        /* Library Grid */
        .grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 20px;
            margin-top: 40px;
        }

        .card {
            background: var(--glass);
            border: 1px solid var(--border);
            border-radius: 18px;
            overflow: hidden;
            transition: 0.3s;
        }

        .card img { width: 100%; aspect-ratio: 16/9; object-fit: cover; cursor: pointer; }
        .card-body { padding: 15px; display: flex; justify-content: space-between; align-items: center; }
        
        .trash-btn { background: none; border: none; color: #f87171; cursor: pointer; font-size: 1.1rem; }
    </style>
</head>
<body>

    <nav>
        <div class="logo">NEXUS HUB</div>
        <a href="#" class="nav-link active"><i class="fa-solid fa-house"></i> Home</a>
    </nav>

    <main>
        <div class="hero">
            <h1>Media Portal</h1>
            <p style="color: var(--text-dim);">Download and save your favorite videos instantly.</p>
        </div>

        <div class="control-panel">
            <div class="input-row">
                <input type="text" id="urlInput" placeholder="Paste YouTube link here...">
                <button class="btn btn-main" onclick="playVideo()"><i class="fa-solid fa-play"></i> Play</button>
                <button class="btn btn-alt" onclick="downloadVideo()"><i class="fa-solid fa-download"></i> Download</button>
            </div>
            <button class="btn btn-alt" style="width: 100%; justify-content: center;" onclick="saveVideo()">
                <i class="fa-solid fa-plus"></i> Add to My Library
            </button>
        </div>

        <div id="player-container">
            <div class="error-fix-bar">
                <span>If video shows "Error 153", click the Fix button âž”</span>
                <button class="btn btn-main" style="padding: 5px 15px; font-size: 0.8rem;" id="fixBtn">External Fix</button>
            </div>
            <div class="iframe-wrapper">
                <iframe id="mainIframe" src="" frameborder="0" allowfullscreen></iframe>
            </div>
        </div>

        <h2 style="margin-top: 50px;">Saved Collection</h2>
        <div id="libraryGrid" class="grid"></div>
    </main>

    <script>
        // Start-up: Load data from permanent Local Storage
        window.onload = renderLibrary;

        function getID(url) {
            const regExp = /^.*(youtu.be\/|v\/|u\/\w\/|embed\/|watch\?v=|\&v=)([^#\&\?]*).*/;
            const match = url.match(regExp);
            return (match && match[2].length === 11) ? match[2] : null;
        }

        function playVideo() {
            const val = document.getElementById('urlInput').value;
            const id = getID(val);
            
            if (id) {
                const container = document.getElementById('player-container');
                const iframe = document.getElementById('mainIframe');
                
                // Using 'nocookie' version for better success rates
                iframe.src = `https://www.youtube-nocookie.com/embed/${id}?autoplay=1`;
                container.style.display = "block";
                
                // Setup Fix Button
                document.getElementById('fixBtn').onclick = () => window.open(`https://www.youtube.com/watch?v=${id}`, '_blank');
                
                container.scrollIntoView({ behavior: 'smooth' });
            } else {
                alert("Please paste a valid English YouTube link.");
            }
        }

        function downloadVideo() {
            const val = document.getElementById('urlInput').value;
            if (val) {
                window.open(`https://en.savefrom.net/1-youtube-video-downloader-384.html?url=${encodeURIComponent(val)}`, '_blank');
            }
        }

        // PERMANENT STORAGE FIX
        function saveVideo() {
            const val = document.getElementById('urlInput').value;
            const id = getID(val);
            
            if (id) {
                let db = JSON.parse(localStorage.getItem('nexus_library_v3')) || [];
                if (!db.includes(id)) {
                    db.push(id);
                    localStorage.setItem('nexus_library_v3', JSON.stringify(db));
                    renderLibrary();
                    alert("Added to Library!");
                } else {
                    alert("Already exists in your collection.");
                }
            }
        }

        function renderLibrary() {
            const grid = document.getElementById('libraryGrid');
            const db = JSON.parse(localStorage.getItem('nexus_library_v3')) || [];
            
            grid.innerHTML = "";
            db.forEach(id => {
                const card = document.createElement('div');
                card.className = 'card';
                card.innerHTML = `
                    <img src="https://img.youtube.com/vi/${id}/mqdefault.jpg" onclick="quickPlay('${id}')">
                    <div class="card-body">
                        <strong>Video ID: ${id}</strong>
                        <button class="trash-btn" onclick="deleteItem('${id}')"><i class="fa-solid fa-trash"></i></button>
                    </div>
                `;
                grid.appendChild(card);
            });
        }

        function quickPlay(id) {
            document.getElementById('urlInput').value = `https://www.youtube.com/watch?v=${id}`;
            playVideo();
        }

        function deleteItem(id) {
            let db = JSON.parse(localStorage.getItem('nexus_library_v3')) || [];
            db = db.filter(i => i !== id);
            localStorage.setItem('nexus_library_v3', JSON.stringify(db));
            renderLibrary();
        }
    </script>
</body>
</html>
